<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
                <%= @user.email %>
                
                <div>Created: <%= @user.created_at %></div>

                <div>Updated: <%= @user.updated_at %></div>
                <p>The time Is: <%= Time.now %></p>
            </h1>   
        </section>
    </aside>
</div>